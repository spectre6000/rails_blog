<% provide( :title, "Author Log in" ) %>
<h1>Author Log in</h1>

<div>
  <div>
    <%= form_for( :session, url: author_login_path ) do | f | %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in" %>
    <% end %>
  </div>
</div>